  "version": "2.0.0",
  "tasks": [
    {
      "label": "go run",
      "type": "shell",
      "command": "make run",
      "group": "build",
      "options": {
        "env": {}
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [
        "$go"
      ]
    }
  ]
}
