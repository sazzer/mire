{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go run",
      "type": "shell",
      "command": "go run cmd/mire/*",
      "group": "build",
      "options": {
        "env": {}
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": ["$go"]
    },

    {
      "label": "go check",
      "type": "shell",
      "command": "golangci-lint run",
      "group": "test",
      "options": {
        "env": {}
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": ["$go"]
    },

    {
      "label": "go test",
      "type": "shell",
      "command": "go test ./internal/...",
      "group": "test",
      "options": {
        "env": {}
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": ["$go"]
    }
  ]
}
